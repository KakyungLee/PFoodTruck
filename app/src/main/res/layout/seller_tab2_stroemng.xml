<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <TextView
                android:id="@+id/seller_tab2_uploadimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="seller가 등록한 \n푸드트럭 이미지"
                android:textSize="30sp"
                android:clickable="true"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="center">
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView
                    android:id="@+id/seller_tab2_introducestore"
                    android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:text="매장소개"
                      android:gravity="center"
                      android:clickable="true"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView
                    android:id="@+id/seller_tab2_menumanagement"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="메뉴관리"
                    android:gravity="center"
            android:onClick="onClick_seller_menumanagement"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="center">
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
    </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <TextView android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:text="써클뷰 \n즐겨찾기수"
                          android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                          android:text="써클뷰 \n매장평점"
                          android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                          android:text="써클뷰 \n**"
                          android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="center">
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Review"
                      android:layout_centerHorizontal="true"/>
            <Button
                    android:id="@+id/seller_tab2_reviewmore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="더보기"
            android:onClick="onClick_seller_reviewmore"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>