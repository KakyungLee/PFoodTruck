<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="0.4"
                  android:orientation="vertical"
                  android:layout_margin="2dp"
                  android:gravity="center_horizontal">
        <ImageView
                android:id="@+id/seller_store_detailinfo_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
        android:background="@drawable/img_gopizza_main"/>

    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#000000"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="0.8"
                  android:background="#ffffff">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_margin="10dp"
                      android:gravity="center">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:hint="매장명 : GoPizza"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="15dp"
                    android:hint="소유주 : 박진현"/>
            <TextView
                    android:id="@+id/seller_textinput_store_introstore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:lines = "3"
                    android:layout_marginTop="25dp"
                    android:text="매장 소개 : "/>
            <TextView
                    android:id="@+id/seller_textinput_store_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines = "4"
                    android:textSize="22sp"
                    android:layout_marginTop="25dp"
                    android:text="한마디 : "/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="0.2"
                  android:gravity="center"
                  android:layout_margin="20dp">
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="확인"/>
    </LinearLayout>
</LinearLayout>